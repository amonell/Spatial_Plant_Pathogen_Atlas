// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Spatiotemporal SI TRM",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"features": {
		"ghcr.io/devcontainers-contrib/features/black:2": {},
		"ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
			"version": "4.3.0",
			"installJupyterlab": true,
			"installRMarkdown": true,
			"installRadian": true,
			"vscodeRSupport": "lsp"
		},
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": "github::nx10/httpgd,tidyverse,Seurat@4.4.0,bioc::UCell,bioc::zellkonverter,bioc::SingleCellExperiment,bioc::scran,bioc::scater,bioc::scuttle",
			"installSystemRequirements": true
		}
	},
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"settings": {
				"r.bracketedPaste": true,
				"r.rterm.linux": "/usr/local/bin/radian",
				"r.plot.useHttpgd": true,
				"r.lsp.diagnostics": false,
				"extensions.autoUpdate": false,
        		"extensions.autoCheckUpdates": false
			},
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-renderers",
				"ms-python.black-formatter",
				"reditorsupport.r",
				"naumovs.color-highlight@2023.18.0",
				"ms-python.vscode-pylance@2023.10.40"

			]
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}
